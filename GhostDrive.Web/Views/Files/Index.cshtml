@model IEnumerable<GhostDrive.Application.Models.FileDto>

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@inject IHtmlLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = Localizer["FilesTitle"];
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Localizer["FileNameLabel"]
            </th>
            <th>
                @Localizer["FileUploadDateLabel"]
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadDate)
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Files" method="post">
                        <input type="submit" value=@SharedLocalizer["DeleteButton"] class="btn btn-danger" />
                        <input name="id" type="hidden" value=@item.Id />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
